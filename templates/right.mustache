<!doctype html>
<html>
  <head>
    <title>Right! - {{title}}</title>
    <link href="assets/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="assets/global.css" rel="stylesheet">
  </head>
  <body>
    <div id="small-container">
      <h1 class="main-title h1">Correct!</h1>
      <br />
      <form method="post" action="saveresult" class="form-horizontal">
        <input type="hidden" name="name" value="{{name}}" />
        <input type="hidden" name="answer" value="{{answer}}" />
        <div class="control-group">
          <label class="control-label" for="full-name">Name</label>
          <div class="controls">
            <input name="full-name" type="text" />
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="identification">
            {{identification}}
          </label>
          <div class="controls">
            <input name="identification" type="text" />
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <button type="submit" class="btn">Submit</button>
          </div>
        </div>
      </form>
      <center>
        {{#error}}
        <div id="error">
          {{error}}
        </div>
        {{/error}}
      </center>
    </div>
  </body>
</html>